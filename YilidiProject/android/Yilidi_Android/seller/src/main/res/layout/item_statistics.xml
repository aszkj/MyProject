<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_normal_height"
    android:layout_marginTop="@dimen/default_1_px"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/normal_margin_lr"
    android:paddingRight="@dimen/normal_margin_lr">

    <TextView
        android:id="@+id/tv_statistics_date"
        style="@style/TextAppearance.Normal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="14"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_statistics_name"
        style="@style/TextAppearance.Normal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_statistics_result"
        style="@style/TextAppearance.Normal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:gravity="center" />
</LinearLayout>