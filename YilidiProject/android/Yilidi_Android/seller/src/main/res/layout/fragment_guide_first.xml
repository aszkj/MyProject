<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_guide_first"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/guide_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:id="@+id/guide_button"
                android:layout_width="@dimen/button_normal_width"
                android:layout_height="@dimen/button_normal_height"
                android:layout_marginBottom="@dimen/guide_btn_bottom"
                android:background="@drawable/button_red_selector"
                style="@style/TextAppearance.Large.White"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="@string/guide_button"
                android:visibility="gone"/>

        <ImageView
                android:id="@+id/guide_item_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        <ImageView
                android:id="@+id/guide_item_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/guide_item_3"
                android:layout_marginTop="@dimen/margin_big"
                android:layout_marginBottom="@dimen/margin_smaller"
                android:layout_centerHorizontal="true"/>

        <ImageView
                android:id="@+id/guide_item_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/guide_item_2"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>