<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/order_detail_product_item_height"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/normal_margin_lr"
    android:paddingRight="@dimen/normal_margin_lr">

    <ImageView
        android:id="@+id/iv_order_detail_product_image"
        android:layout_width="@dimen/order_list_phone_width"
        android:layout_height="@dimen/order_list_phone_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin_lr"
        android:layout_marginStart="@dimen/small_margin_lr"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iv_order_detail_product_name"
            style="@style/TextAppearance.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/iv_order_detail_product_capacity"
            style="@style/TextAppearance.Small.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_text_gap" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tiny_text_gap">

            <TextView
                android:id="@+id/iv_order_detail_product_count"
                style="@style/TextAppearance.Small.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/iv_order_detail_product_price"
                style="@style/TextAppearance.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/order_detail_product_item_margin_right"
                android:layout_marginEnd="@dimen/order_detail_product_item_margin_right"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>