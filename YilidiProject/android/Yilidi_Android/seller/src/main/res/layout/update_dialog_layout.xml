<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="270dp"
              android:layout_height="match_parent"
              android:background="@drawable/download_dialog"
              android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Large.Blue"
            android:layout_gravity="center_horizontal"
            android:text="发现新版本"
            android:layout_margin="10dp"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/colorPrimary"/>

    <TextView
            android:id="@+id/content_new_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Normal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

    <TextView
            android:id="@+id/content_new_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Normal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Normal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="更新内容"/>

    <TextView
            android:id="@+id/content_new_version_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Normal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@drawable/dotted"/>

    <TextView
            android:id="@+id/content_new_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Normal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">
        <Button
                android:id="@+id/cancel_button"
                android:background="@drawable/button_white_gray_selector"
                style="@style/TextAppearance.Normal.Secondary"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="取消"/>

        <Button
                android:id="@+id/confirm_button"
                android:background="@drawable/button_white_red_selector"
                style="@style/TextAppearance.Normal.Red"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="立即更新"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>