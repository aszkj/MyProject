<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin_top"
        android:background="@mipmap/address_side" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/allot_cart_address_width"
        android:background="@color/cart_address_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="@dimen/normal_margin_lr"
        android:paddingLeft="@dimen/allot_cart_address_padding"
        android:paddingRight="@dimen/normal_margin_lr"
        android:paddingStart="@dimen/allot_cart_address_padding">

        <TextView
            style="@style/TextAppearance.Big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/allot_cart_address_label" />

        <TextView
            android:id="@+id/tv_allot_cart_address"
            style="@style/TextAppearance.Normal.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_text_gap" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/address_side" />

    <TextView
        android:id="@+id/tv_allot_cart_warehouse_name"
        style="@style/TextAppearance.Normal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/normal_margin_lr"
        android:paddingRight="@dimen/normal_margin_lr"
        android:singleLine="true" />
</LinearLayout>