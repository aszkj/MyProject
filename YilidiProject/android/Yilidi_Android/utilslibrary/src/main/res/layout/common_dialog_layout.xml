<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dialog_width"
              android:layout_height="wrap_content"
              android:background="@drawable/download_dialog"
              android:orientation="vertical">

    <TextView
        style="@style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_big"
        android:text="@string/common_dialog_title"/>

    <TextView
        android:id="@+id/content_view"
        style="@style/TextAppearance.Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal_margin_lr"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_big">

        <Button
            android:id="@+id/cancel_button"
            style="@style/TextAppearance.Big.Secondary"
            android:layout_width="@dimen/button_normal_width"
            android:layout_height="@dimen/button_normal_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_white_gray_selector"
            android:gravity="center"
            android:text="@string/dialog_cancel"/>

        <Button
            android:id="@+id/confirm_button"
            style="@style/TextAppearance.Big.Red"
            android:layout_width="@dimen/button_normal_width"
            android:layout_height="@dimen/button_normal_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_white_gray_selector"
            android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>