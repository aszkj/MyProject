<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/cart_item"
              android:background="@color/white"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/normal_margin_lr"
              android:paddingRight="@dimen/normal_margin_lr">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/order_product_image_wh"
        android:layout_height="@dimen/order_product_image_wh"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/normal_margin_lr"
        android:layout_marginTop="@dimen/margin_bigger">

        <TextView
            android:id="@+id/product_name"
            style="@style/TextAppearance.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_lager"
            android:ellipsize="end"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/product_capacity"
            style="@style/TextAppearance.Normal.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_marginTop="@dimen/margin_tiny"/>

        <TextView
            android:id="@+id/product_count"
            style="@style/TextAppearance.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_capacity"
            android:layout_marginTop="@dimen/margin_smaller"/>

        <TextView
            android:id="@+id/product_price"
            style="@style/TextAppearance.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/order_padding_bottom"
            android:layout_marginRight="@dimen/margin_bigger"/>
    </RelativeLayout>
</LinearLayout>