<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">

    <com.yldbkd.www.library.android.viewCustomer.VerticalViewPager
        android:id="@+id/product_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_bottom_height"/>

    <include
        android:id="@+id/product_bottom_layout"
        layout="@layout/product_detail_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_bottom_height"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

    <include
        layout="@layout/main_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:layout_alignParentTop="true"/>
</RelativeLayout>