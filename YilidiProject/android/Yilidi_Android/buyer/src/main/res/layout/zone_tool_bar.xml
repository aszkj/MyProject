<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tool_bar_height">

    <RelativeLayout
        android:id="@+id/zone_back_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/zone_back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/back_btn"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/zone_title_view"
        style="@style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/zone_divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_1_px"
        android:layout_alignParentBottom="true"
        android:background="@color/dividerColor"
        />
</RelativeLayout>