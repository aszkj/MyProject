<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cart_address_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/normal_margin_lr"
                android:paddingRight="@dimen/normal_margin_lr">

    <LinearLayout
        android:id="@+id/ll_location_address_edit_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/normal_margin_lr">

        <ImageView
            android:id="@+id/address_edit_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/address_edit"/>
    </LinearLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/ll_location_address_edit_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/address_user_view"
            style="@style/TextAppearance.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/address_mobile_view"
            style="@style/TextAppearance.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/search_address_phone_margin"
            android:layout_marginRight="@dimen/search_address_phone_margin"
            android:layout_toEndOf="@id/address_user_view"
            android:layout_toRightOf="@id/address_user_view"/>

        <TextView
            android:id="@+id/address_detail_view"
            style="@style/TextAppearance.Small.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_user_view"
            android:layout_marginTop="@dimen/margin_bigger"/>
    </RelativeLayout>

</RelativeLayout>