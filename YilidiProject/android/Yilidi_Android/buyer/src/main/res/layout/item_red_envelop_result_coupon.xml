<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/red_envelop_result_item_height"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:background="@drawable/item_red_envelop_result_left"
            android:paddingLeft="@dimen/normal_margin_lr"
            android:paddingRight="@dimen/normal_margin_lr"
            android:paddingTop="@dimen/small_text_gap">

            <TextView
                android:id="@+id/tv_item_coupon_scope"
                style="@style/TextAppearance.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_item_coupon_desc"
                style="@style/TextAppearance.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_coupon_scope"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:id="@+id/tv_item_coupon_time"
                style="@style/TextAppearance.Normal.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/tiny_text_gap" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/item_red_envelop_result_right"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/tiny_text_gap">

            <TextView
                android:id="@+id/tv_item_coupon_amount"
                style="@style/TextAppearance.RedEnvelopAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_item_coupon_type"
                style="@style/TextAppearance.RedEnvelopType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_coupon_amount"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tv_item_coupon_status"
                style="@style/TextAppearance.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/tiny_text_gap" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/red_envelop_result_line_top"
        android:layout_marginLeft="@dimen/red_envelop_result_line_padding"
        android:layout_marginRight="@dimen/red_envelop_result_line_padding"
        android:background="@drawable/red_envelop_coupon_side" />
</RelativeLayout>