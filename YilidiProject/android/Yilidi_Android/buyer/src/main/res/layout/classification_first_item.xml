<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_bottom_height">

    <TextView
        android:id="@+id/classify_first_name_view"
        style="@style/TextAppearance.Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_1_px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_lager"
        android:layout_marginRight="@dimen/margin_lager"
        android:background="@color/dividerColor"/>

    <ImageView
        android:id="@+id/checked_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_tiny"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_lager"
        android:layout_marginRight="@dimen/margin_lager"
        android:background="@color/colorPrimary"
        android:visibility="gone"/>
</RelativeLayout>