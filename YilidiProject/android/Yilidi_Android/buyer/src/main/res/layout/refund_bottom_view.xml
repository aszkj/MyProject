<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/order_margin_top"
              android:layout_marginTop="@dimen/order_status_margin_top"
              android:background="@color/background"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tel_connect_us"
        style="@style/TextAppearance.Normal.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@mipmap/phone_image"
        android:drawablePadding="@dimen/margin_small"
        android:text="@string/profile_tel"
        android:textColorLink="@color/primaryText"/>

    <TextView
        style="@style/TextAppearance.Normal.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/connect_us_desc"/>
</LinearLayout>