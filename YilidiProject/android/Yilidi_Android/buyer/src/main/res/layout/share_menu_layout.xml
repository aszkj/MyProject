<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightBackground">

    <LinearLayout
        android:id="@+id/share_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_bigger"
        android:layout_alignParentBottom="true"
        android:background="@color/share_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weixin_choose_text"
            style="@style/TextAppearance.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/margin_normal"
            android:drawableTop="@mipmap/wechat"
            android:gravity="center"
            android:text="微信好友"/>

        <TextView
            android:id="@+id/weixin_circle_choose_text"
            style="@style/TextAppearance.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/margin_normal"
            android:drawableTop="@mipmap/wxcircle"
            android:gravity="center"
            android:text="朋友圈"/>

        <TextView
            android:id="@+id/message_choose_text"
            style="@style/TextAppearance.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/margin_normal"
            android:drawableTop="@mipmap/message"
            android:gravity="center"
            android:padding="@dimen/margin_big"
            android:text="短信"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:id="@+id/view_popupwindow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/share_ll"/>
</RelativeLayout>