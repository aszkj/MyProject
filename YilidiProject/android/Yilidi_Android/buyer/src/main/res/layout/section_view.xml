<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center">

    <TextView
        android:id="@+id/sv_left"
        android:layout_width="@dimen/location_address_selector_width"
        android:layout_height="wrap_content"
        android:background="@drawable/sv_left_selector"
        android:gravity="center"
        android:text="我的收货地址"
        android:textColor="@drawable/sv_text_selector"/>

    <TextView
        android:id="@+id/sv_right"
        android:layout_width="@dimen/location_address_selector_width"
        android:layout_height="wrap_content"
        android:background="@drawable/sv_right_selector"
        android:gravity="center"
        android:text="附近自提门店"
        android:textColor="@drawable/sv_text_selector"/>

</LinearLayout>