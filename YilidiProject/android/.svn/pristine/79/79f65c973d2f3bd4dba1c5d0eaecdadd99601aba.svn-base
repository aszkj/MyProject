<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/class_product_list_item_image"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big">

        <ImageView
            android:id="@+id/iv_search_product_image"
            android:layout_width="@dimen/class_product_width"
            android:layout_height="@dimen/class_product_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_search_product_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_search_product_name"
            style="@style/TextAppearance.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toRightOf="@id/iv_search_product_image"
            android:maxLines="2"/>
    </RelativeLayout>

    <View
        android:id="@+id/is_share_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_1_px"
        android:layout_below="@id/ll_product"
        android:background="@mipmap/product_line"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_smaller"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big">

        <TextView
            android:id="@+id/tv_search_product_sale_count"
            style="@style/TextAppearance.Small.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_search_product_retail_price"
            style="@style/TextAppearance.Small.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_second"/>

        <TextView
            android:id="@+id/tv_search_product_promotional_price"
            style="@style/TextAppearance.Small.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_third"/>

        <TextView
            android:id="@+id/tv_search_product_stock_num"
            style="@style/TextAppearance.Small.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fourth"/>
    </RelativeLayout>

    <View
        android:id="@+id/is_share_view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_1_px"
        android:layout_below="@id/ll_product"
        android:background="@mipmap/product_line"/>

    <RelativeLayout
        android:id="@+id/rl_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:baselineAligned="false">

        <Button
            android:id="@+id/btn_offline"
            style="@style/TextAppearance.Normal"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_small_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_big"
            android:text="@string/class_product_offline"/>

        <Button
            android:id="@+id/btn_online"
            style="@style/TextAppearance.Normal"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_small_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_big"
            android:text="@string/class_product_online"/>
    </RelativeLayout>
</LinearLayout>