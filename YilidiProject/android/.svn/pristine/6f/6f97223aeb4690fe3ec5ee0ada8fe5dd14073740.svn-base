<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/main_tool_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:layout_marginTop="@dimen/margin_big"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/normal_margin_lr"
        android:paddingRight="@dimen/normal_margin_lr"
        android:paddingTop="@dimen/margin_small">

        <TextView
            android:id="@+id/tv_primary_pwd"
            style="@style/TextAppearance.Normal"
            android:layout_width="@dimen/login_left_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/profile_primary_pwd" />

        <com.yldbkd.www.library.android.viewCustomer.ClearableEditText
            android:id="@+id/et_primary_pwd"
            style="@style/TextAppearance.Normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/tv_primary_pwd"
            android:background="@drawable/transparent"
            android:ems="15"
            android:hint="@string/profile_please_input_primary_pwd"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColorHint="@color/lightText" />

    </RelativeLayout>

    <include layout="@layout/divider_layout_2" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/normal_margin_lr"
        android:paddingRight="@dimen/normal_margin_lr"
        android:paddingTop="@dimen/margin_small">

        <TextView
            android:id="@+id/tv_new_pwd"
            style="@style/TextAppearance.Normal"
            android:layout_width="@dimen/login_left_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/profile_new_pwd" />

        <com.yldbkd.www.library.android.viewCustomer.ClearableEditText
            android:id="@+id/et_new_pwd"
            style="@style/TextAppearance.Normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/tv_new_pwd"
            android:background="@drawable/transparent"
            android:ems="20"
            android:hint="@string/profile_please_set_new_login_pwd"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColorHint="@color/lightText" />


    </RelativeLayout>


    <include layout="@layout/divider_layout_2" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:background="@color/white"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/normal_margin_lr"
        android:paddingRight="@dimen/normal_margin_lr"
        android:paddingTop="@dimen/margin_small">

        <TextView
            android:id="@+id/tv_sure_pwd"
            style="@style/TextAppearance.Normal"
            android:layout_width="@dimen/login_left_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/profile_sure_pwd" />

        <com.yldbkd.www.library.android.viewCustomer.ClearableEditText
            android:id="@+id/et_sure_pwd"
            style="@style/TextAppearance.Normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/tv_sure_pwd"
            android:background="@drawable/transparent"
            android:ems="20"
            android:hint="@string/profile_please_again_input"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColorHint="@color/lightText" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_big_height"
        android:layout_marginLeft="@dimen/normal_margin_lr"
        android:layout_marginRight="@dimen/normal_margin_lr"
        android:layout_marginTop="@dimen/normal_margin_top">

        <Button
            android:id="@+id/btn_submit"
            style="@style/TextAppearance.Normal.White"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_yellow_selector"
            android:text="@string/profile_finish_set" />
    </RelativeLayout>

    <TextView
        style="@style/TextAppearance.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_big"
        android:paddingLeft="@dimen/normal_margin_lr"
        android:paddingRight="@dimen/normal_margin_lr"
        android:text="@string/login_please_set_new_pwd" />

</LinearLayout>