<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dialog_width"
              android:layout_height="wrap_content"
              android:background="@drawable/download_dialog"
              android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Large"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_big"
            android:text="@string/cart_best_time_title"/>

    <LinearLayout
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_margin_lr"
            android:orientation="horizontal"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_big">

        <Button
                android:id="@+id/cancel_button"
                android:background="@drawable/button_white_gray_selector"
                style="@style/TextAppearance.Normal.Secondary"
                android:layout_width="@dimen/button_normal_width"
                android:layout_height="@dimen/button_normal_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/dialog_cancel"/>

        <Button
                android:id="@+id/confirm_button"
                android:background="@drawable/button_orange_selector"
                style="@style/TextAppearance.Normal.Red"
                android:layout_width="@dimen/button_normal_width"
                android:layout_height="@dimen/button_normal_height"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/dialog_confirm"/>
    </RelativeLayout>
</LinearLayout>