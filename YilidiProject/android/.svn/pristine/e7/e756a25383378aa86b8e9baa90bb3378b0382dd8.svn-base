<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/cart_exchange_product_weight"
              android:layout_height="@dimen/cart_exchange_product_height"
              android:orientation="vertical"
              android:paddingLeft="@dimen/cart_exchange_margin"
              android:paddingRight="@dimen/cart_exchange_margin">

    <ImageView
            android:id="@+id/cart_exchange_item_img"
            android:layout_width="@dimen/cart_exchange_image"
            android:layout_height="@dimen/cart_exchange_image"
            android:layout_marginTop="@dimen/margin_big"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"/>

    <TextView
            android:id="@+id/cart_exchange_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Normal"
            android:layout_marginTop="@dimen/margin_small"/>

    <TextView
            android:id="@+id/cart_exchange_item_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.Small.Secondary"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_normal">

        <TextView
                android:id="@+id/cart_exchange_item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                style="@style/TextAppearance.Normal"/>

        <ImageView
                android:id="@+id/cart_exchange_item_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_cart_exchange"/>
    </LinearLayout>

</LinearLayout>