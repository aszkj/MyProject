    <!-- grid -->
    <style name="Widget.GridView" parent="@style/Widget">
        <item name="android:fadingEdge">none</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:isScrollContainer">false</item>
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:verticalSpacing">0dp</item>
    </style>

    <style name="Widget.GridView.Home.Classify" parent="Widget.GridView">

    </style>

    <style name="Widget.GridView.Home.Product" parent="Widget.GridView">
        <item name="android:horizontalSpacing">@dimen/default_1_px</item>
        <item name="android:verticalSpacing">@dimen/default_1_px</item>
        <item name="android:numColumns">2</item>
    </style>

    <!-- list -->
    <style name="Widget.ListView" parent="@style/Widget">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:fastScrollEnabled">false</item>
    </style>

    <style name="Anim_style.Popupwindow">
        <item name="android:windowEnterAnimation">@anim/push_down</item>
        <item name="android:windowExitAnimation">@anim/push_up</item>
    </style>

    <!-- RatingBar -->
    <style name="RatingBar" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_layer</item>
    </style>
</resources>
