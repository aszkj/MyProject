<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar"/>

    <!-- activity anim -->
    <style name="AnimMove" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/left_push_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_push_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/right_push_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_push_out</item>
    </style>

    <style name="Anim_style" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimMove</item>
    </style>

    <style name="Widget"/>
    <!-- 字体 -->
