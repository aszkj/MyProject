<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@android:color/transparent">

    <RelativeLayout
            android:id="@+id/home_store_other_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_title_item_height">

        <ImageView
                android:layout_width="@dimen/home_other_store_line_width"
                android:layout_height="@dimen/home_other_store_line_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@color/dividerColor"/>

        <ImageView
                android:layout_width="@dimen/home_other_store_line_width"
                android:layout_height="@dimen/home_other_store_line_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/dividerColor"/>

        <TextView
                style="@style/TextAppearance.Normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/home_store_other"/>
    </RelativeLayout>

    <com.yldbkd.www.library.android.viewCustomer.ListInScrollView
            android:id="@+id/home_store_others"
            style="@style/Widget.ListView.Home.Store"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>

    <include layout="@layout/scroll_bottom_view"/>
</LinearLayout>