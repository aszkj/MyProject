<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <include layout="@layout/action_bar_main"/>

    <RelativeLayout
        android:id="@+id/rl_kf_phone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_normal_height"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_big">

        <ImageView
            android:id="@+id/phone_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/phone"/>

        <TextView
            style="@style/TextAppearance.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_toRightOf="@id/phone_image_view"
            android:text="@string/connect_phone_kf"/>

        <TextView
            style="@style/TextAppearance.Smaller.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/connect_kf_margin"
            android:text="@string/customer_service_line"/>
    </RelativeLayout>

    <include layout="@layout/divider_layout"/>

    <RelativeLayout
        android:id="@+id/rl_kf_manager_phone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_normal_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_big">

        <ImageView
            android:id="@+id/phone_manager_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/phone"/>

        <TextView
            style="@style/TextAppearance.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_toRightOf="@id/phone_manager_image_view"
            android:text="@string/connect_phone_manager"/>

        <TextView
            style="@style/TextAppearance.Smaller.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/connect_kf_margin"
            android:text="@string/investment_service_line"/>
    </RelativeLayout>
</LinearLayout>
