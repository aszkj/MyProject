<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <include layout="@layout/main_tool_bar"/>

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/divider_layout"/>

        <com.yldbkd.www.library.android.viewCustomer.ClearableEditText
            android:id="@+id/nickname_text_view"
            style="@style/TextAppearance.Bigger"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginRight="@dimen/margin_lager"
            android:background="@null"
            android:hint="@string/search_hint_text"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColorHint="@color/lightText"/>

        <include layout="@layout/divider_layout"/>
    </LinearLayout>

    <TextView
        style="@style/TextAppearance.Normal.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_big"
        android:layout_marginRight="@dimen/margin_big"
        android:layout_marginTop="@dimen/margin_big"
        android:text="@string/update_nickname_desc"/>
</LinearLayout>