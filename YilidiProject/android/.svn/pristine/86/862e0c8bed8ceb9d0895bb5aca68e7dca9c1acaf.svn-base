<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.yldbkd.www.library.android.pullRefresh.PullToRefreshListView
        android:id="@+id/evalution_list_view"
        style="@style/Widget.ListView.Evalution"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/rl_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_title_bar"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/no_evalution"
            android:gravity="center"/>

        <TextView
            style="@style/TextAppearance.Normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_nodata"
            android:layout_marginBottom="@dimen/padding_normal"
            android:layout_marginTop="@dimen/margin_big"
            android:gravity="center"
            android:text="@string/store_no_evalution"/>
    </RelativeLayout>
</RelativeLayout>