        android:gravity="center_vertical"
        android:paddingEnd="@dimen/home_title_margin_right"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/home_title_margin_right"
        android:paddingStart="@dimen/margin_normal">

        <ImageView
            android:id="@+id/home_class_image_view"
            android:layout_width="@dimen/home_store_class_image"
            android:layout_height="@dimen/home_store_class_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/home_class_name_view"
            style="@style/TextAppearance.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginStart="@dimen/normal_text_gap"
            android:layout_toEndOf="@id/home_class_image_view"
            android:layout_toRightOf="@id/home_class_image_view"/>

        <TextView
            android:id="@+id/tv_home_product_more"
            style="@style/TextAppearance.Normal.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/home_more"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/home_class_advert_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_advert_height"
        android:layout_gravity="center"/>

