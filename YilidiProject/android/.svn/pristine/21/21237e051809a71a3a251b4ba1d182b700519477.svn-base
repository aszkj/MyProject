<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/margin_normal"
                android:paddingLeft="@dimen/normal_margin_lr"
                android:paddingRight="@dimen/normal_margin_lr"
                android:paddingTop="@dimen/margin_normal">

    <TextView
        android:id="@+id/message_content_view"
        style="@style/TextAppearance.Normal.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message_time_view"
        style="@style/TextAppearance.Small.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/message_content_view"
        android:layout_marginTop="@dimen/margin_smaller"/>

</RelativeLayout>