<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_order_detail_products"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <include layout="@layout/divider_layout"/>

    <RelativeLayout
        android:id="@+id/rl_order_detail_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_bottom_height"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_order_detail_submit"
            style="@style/TextAppearance.Normal.White"
            android:layout_width="@dimen/button_normal_width"
            android:layout_height="@dimen/button_normal_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/normal_margin_lr"
            android:layout_marginRight="@dimen/normal_margin_lr"
            android:background="@drawable/button_blue_selector"/>
    </RelativeLayout>
</LinearLayout>