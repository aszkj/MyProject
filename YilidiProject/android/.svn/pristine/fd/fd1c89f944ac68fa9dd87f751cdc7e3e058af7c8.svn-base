<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/main_tool_bar" />

    <include layout="@layout/divider_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="4"
                android:text="@string/join_us_notify" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="#f00">

                <TextView
                    style="@style/TextAppearance.Bigger.White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/normal_margin_lr"
                    android:layout_marginTop="@dimen/normal_margin_lr"
                    android:text="@string/profile_join_us_title" />
            </RelativeLayout>

            <include layout="@layout/divider_layout" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_small_height"
                android:background="@color/white"
                android:paddingLeft="@dimen/normal_margin_lr"
                android:paddingRight="@dimen/normal_margin_lr">

                <com.yldbkd.www.library.android.viewCustomer.ClearableEditText
                    android:id="@+id/join_us_name"
                    style="@style/TextAppearance.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/transparent"
                    android:ems="15"
                    android:hint="@string/profile_join_us_name"
                    android:singleLine="true"
                    android:textColorHint="@color/lightText" />
            </RelativeLayout>

            <include layout="@layout/divider_layout" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_small_height"
                android:background="@color/white"
                android:paddingLeft="@dimen/normal_margin_lr"
                android:paddingRight="@dimen/normal_margin_lr">

                <com.yldbkd.www.library.android.viewCustomer.ClearableEditText
                    android:id="@+id/join_us_mobile"
                    style="@style/TextAppearance.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/transparent"
                    android:ems="15"
                    android:hint="@string/profile_join_us_mobile"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColorHint="@color/lightText" />
            </RelativeLayout>

            <include layout="@layout/divider_layout" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_small_height"
                android:background="@color/white"
                android:paddingLeft="@dimen/normal_margin_lr"
                android:paddingRight="@dimen/normal_margin_lr">

                <com.yldbkd.www.library.android.viewCustomer.ClearableEditText
                    android:id="@+id/join_us_city"
                    style="@style/TextAppearance.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/transparent"
                    android:ems="15"
                    android:hint="@string/profile_join_us_city"
                    android:singleLine="true"
                    android:textColorHint="@color/lightText" />
            </RelativeLayout>

            <include layout="@layout/divider_layout" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_small_height"
                android:background="@color/white"
                android:paddingLeft="@dimen/normal_margin_lr"
                android:paddingRight="@dimen/normal_margin_lr">

                <com.yldbkd.www.library.android.viewCustomer.ClearableEditText
                    android:id="@+id/join_us_space"
                    style="@style/TextAppearance.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/transparent"
                    android:ems="15"
                    android:hint="@string/profile_join_us_space"
                    android:singleLine="true"
                    android:textColorHint="@color/lightText" />
            </RelativeLayout>

            <include layout="@layout/divider_layout" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_small_height"
                android:background="@color/white"
                android:paddingLeft="@dimen/normal_margin_lr"
                android:paddingRight="@dimen/normal_margin_lr">

                <com.yldbkd.www.library.android.viewCustomer.ClearableEditText
                    android:id="@+id/join_us_store"
                    style="@style/TextAppearance.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/transparent"
                    android:ems="15"
                    android:hint="@string/profile_join_us_store"
                    android:singleLine="true"
                    android:textColorHint="@color/lightText" />
            </RelativeLayout>

            <include layout="@layout/divider_layout" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_small_height"
                android:background="@color/white"
                android:paddingLeft="@dimen/normal_margin_lr"
                android:paddingRight="@dimen/normal_margin_lr">

                <com.yldbkd.www.library.android.viewCustomer.ClearableEditText
                    android:id="@+id/join_us_qq"
                    style="@style/TextAppearance.Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/transparent"
                    android:ems="15"
                    android:hint="@string/profile_join_us_qq"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColorHint="@color/lightText" />
            </RelativeLayout>

            <include layout="@layout/divider_layout" />

            <Button
                android:id="@+id/btn_submit"
                style="@style/TextAppearance.Normal.White"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_normal_height"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_big"
                android:background="@drawable/button_blue_selector"
                android:text="@string/profile_submit" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>