<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/coupon_item_height"
                android:background="@color/white">

    <ImageView
            android:id="@+id/coupon_check_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin_lr"
            android:layout_marginRight="@dimen/normal_margin_lr"
            android:layout_centerVertical="true"/>

    <include layout="@layout/coupon_item"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_toRightOf="@id/coupon_check_view"
             android:layout_toEndOf="@id/coupon_check_view"/>
</RelativeLayout>