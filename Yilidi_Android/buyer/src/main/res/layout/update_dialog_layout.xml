<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/update_dialog_width"
                android:layout_height="match_parent"
                android:background="@color/trans_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/update_dialog_bg"
        android:orientation="vertical"
        android:paddingTop="@dimen/update_dialog_head">

        <TextView
            android:id="@+id/content_new_version"
            style="@style/TextAppearance.Bigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/update_dialog_margin_lager"
            android:layout_marginRight="@dimen/update_dialog_margin_lager"/>

        <TextView
            android:id="@+id/content_new_size"
            style="@style/TextAppearance.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/update_dialog_margin_lager"
            android:layout_marginRight="@dimen/update_dialog_margin_lager"/>

        <TextView
            android:id="@+id/content_new_desc"
            style="@style/TextAppearance.Normal.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/update_dialog_margin_lager"
            android:layout_marginRight="@dimen/update_dialog_margin_lager"
            android:layout_marginTop="@dimen/margin_tiny"
            android:minHeight="@dimen/update_dialog_content_minheight"/>

        <Button
            android:id="@+id/confirm_button"
            style="@style/TextAppearance.Bigger.White"
            android:layout_width="@dimen/update_dialog_button_width"
            android:layout_height="@dimen/update_dialog_padding_normal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/update_dialog_padding_little"
            android:layout_marginTop="@dimen/update_dialog_padding_little"
            android:background="@drawable/button_update_dialog_selector"
            android:gravity="center"
            android:text="@string/update_soon"/>
    </LinearLayout>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@mipmap/close_update_dialog"/>
</RelativeLayout>