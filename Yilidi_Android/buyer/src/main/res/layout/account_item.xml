<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <TextView
        android:id="@+id/account_balance_text"
        style="@style/TextAppearance.Bigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_bigger"/>

    <TextView
        android:id="@+id/account_balance_tv"
        style="@style/TextAppearance.Normal.Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_balance_text"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/divider_view"
        android:layout_width="@dimen/account_line_width"
        android:layout_height="@dimen/account_balance_divider_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/dividerColor"/>
</RelativeLayout>