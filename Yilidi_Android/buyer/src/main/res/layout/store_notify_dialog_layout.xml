<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/screen_width"
              android:layout_height="@dimen/screen_height"
              android:layout_alignParentTop="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/store_off_image_width"
        android:layout_height="@dimen/store_off_image_height"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/store_close_bg"/>

        <TextView
            android:id="@+id/content_view"
            style="@style/TextAppearance.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/store_off_text_left"
            android:layout_marginRight="@dimen/store_off_text_left"
            android:layout_marginTop="@dimen/store_off_text_margin_top"
            android:gravity="center_horizontal"
            android:textColor="@color/store_off_text"/>

        <Button
            android:id="@+id/cancel_button"
            style="@style/TextAppearance.Large"
            android:layout_width="@dimen/button_small_width"
            android:layout_height="@dimen/button_normal_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/store_off_text_margin_bottom"
            android:background="@drawable/selector_store_off_bg"
            android:text="@string/dialog_confirm"/>
    </RelativeLayout>
</LinearLayout>