<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_guide_first"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/guide_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/guide_item_1"
            android:layout_width="@dimen/guide_title_width"
            android:layout_height="@dimen/guide_title_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/guide_title_margin_top"/>

        <ImageView
            android:id="@+id/guide_item_3"
            android:layout_width="@dimen/guide_content_width"
            android:layout_height="@dimen/guide_content_height"
            android:layout_below="@id/guide_item_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/guide_content_margin"/>

        <ImageView
            android:id="@+id/guide_item_2"
            android:layout_width="@dimen/guide_bg_width"
            android:layout_height="@dimen/guide_bg_height"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/guide_bg_margin_top"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/guide_item_4"
            android:layout_width="@dimen/guide_bg_width"
            android:layout_height="@dimen/guide_bg_height"
            android:layout_marginBottom="175dp"/>

        <ImageView
            android:id="@+id/guide_item_5"
            android:layout_width="@dimen/guide_bg_width"
            android:layout_height="@dimen/guide_bg_height"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/guide_bg_margin"/>

        <Button
            android:gravity="center"
            android:id="@+id/guide_button"
            style="@style/TextAppearance.Large.Yellow"
            android:layout_width="@dimen/guide_btn_width"
            android:layout_height="@dimen/guide_btn_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/guide_bg_margin"
            android:background="@drawable/button_guid_selector"
            android:text="@string/guide_button"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>