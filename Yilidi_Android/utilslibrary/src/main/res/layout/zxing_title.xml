<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mmtitle_bg_alpha">


    <ImageView
        android:id="@+id/back_view"
        android:layout_width="@dimen/scan_title_height"
        android:layout_height="@dimen/scan_title_height"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/back_btn"/>

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:text="@string/scan_title"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/image_camera_light"
        android:layout_width="@dimen/scan_title_height"
        android:layout_height="@dimen/scan_title_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/camera_light_off"/>
</RelativeLayout>