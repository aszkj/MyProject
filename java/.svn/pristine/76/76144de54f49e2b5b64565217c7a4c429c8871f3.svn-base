										<th width="80">产品名称</th>
										<th width="100">产品规格</th>
										<th width="60">商家编码</th>
										<th width="80">商家名称</th>
										<th width="120">商家类型</th>
										<th width="80">是否上架</th>
										<th width="100">剩余库存</th>
